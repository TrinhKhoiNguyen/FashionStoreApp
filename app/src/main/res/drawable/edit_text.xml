<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi đang focus/nhập liệu - viền vàng -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2.5dp"
                android:color="#FFC107"/> <!-- Vàng brand khi focus -->
            <padding
                android:left="16dp"
                android:top="14dp"
                android:right="16dp"
                android:bottom="14dp"/>
        </shape>
    </item>

    <!-- Khi có lỗi - viền đỏ -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#FEF2F2"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#EF4444"/> <!-- Đỏ khi lỗi -->
            <padding
                android:left="16dp"
                android:top="14dp"
                android:right="16dp"
                android:bottom="14dp"/>
        </shape>
    </item>

    <!-- Bình thường - viền đen đậm -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Đen đậm mặc định -->
            <padding
                android:left="16dp"
                android:top="14dp"
                android:right="16dp"
                android:bottom="14dp"/>
        </shape>
    </item>

</selector>