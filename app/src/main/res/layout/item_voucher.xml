<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFF9C4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_offers"
            android:tint="#F57F17"
            android:layout_gravity="center_vertical" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/voucherTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm 20%"
                android:textColor="#1a1a1a"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/voucherCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="CODE123"
                android:textColor="#F57F17"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_4dp"
                android:backgroundTint="#FFFFFF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/voucherDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Đơn tối thiểu 500.000₫"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/voucherExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="HSD: 31/12/2024"
                android:textColor="#999999"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Copy Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/copyCodeButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:text="Sao chép"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            android:backgroundTint="#FFD700"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
