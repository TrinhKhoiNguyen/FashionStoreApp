<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/background_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cartItemCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:buttonTint="@color/accent_burgundy" />

        <!-- Product Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toEndOf="@id/cartItemCheckbox"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light">

            <ImageView
                android:id="@+id/cartProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Product Image" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Remove Button -->
        <ImageView
            android:id="@+id/cartRemoveButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/background_soft"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_close_24"
            android:tint="@color/text_secondary"
            android:contentDescription="Xóa sản phẩm" />

        <!-- Product Info Container -->
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardImage"
            android:layout_toStartOf="@id/cartRemoveButton"
            android:layout_alignTop="@id/cardImage"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/cartProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Áo Khoác Bomber Nam"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="1dp" />

            <!-- Product Size and Color -->
            <TextView
                android:id="@+id/cartProductSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Size: M"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cartProductColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu: Đen"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Price -->
            <TextView
                android:id="@+id/cartProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="649,000₫"
                android:textColor="@color/price_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Quantity Controls -->
        <LinearLayout
            android:id="@+id/quantityControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardImage"
            android:layout_alignStart="@id/infoContainer"
            android:layout_marginTop="12dp"
            android:background="@drawable/quantity_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp"
            android:maxWidth="200dp">

            <TextView
                android:id="@+id/cartDecreaseButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="−"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="48dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="1"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="none" />

            <TextView
                android:id="@+id/cartIncreaseButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>