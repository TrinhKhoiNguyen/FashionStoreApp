<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bộ lọc sản phẩm"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:paddingBottom="16dp" />

    <!-- Khoảng giá -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khoảng giá"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/minPriceEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Từ"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@drawable/filter_button_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/maxPriceEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Đến"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@drawable/filter_button_background" />
    </LinearLayout>

    <!-- Danh mục -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh mục"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoryChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacing="8dp"
        app:singleLine="false" />

    <!-- Size -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/sizeChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacing="8dp"
        app:singleLine="false" />

    <!-- Chỉ còn hàng -->
    <CheckBox
        android:id="@+id/inStockCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉ hiển thị sản phẩm còn hàng"
        android:layout_marginTop="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/resetFilterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lại"
            android:textColor="#666666"
            android:backgroundTint="#E0E0E0"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/applyFilterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Áp dụng"
            android:textColor="#000000"
            android:backgroundTint="#FFD700" />
    </LinearLayout>

</LinearLayout>