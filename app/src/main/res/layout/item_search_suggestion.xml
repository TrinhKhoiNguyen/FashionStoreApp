<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/suggestionImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="#F0F0F0" />

    <!-- Product Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Product Name -->
        <TextView
            android:id="@+id/suggestionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Áo Hoodie Nam ICONDENIM Explore"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Price Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Current Price -->
            <TextView
                android:id="@+id/suggestionCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="404,100₫"
                android:textColor="#FF0000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Original Price -->
            <TextView
                android:id="@+id/suggestionOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="449,000₫"
                android:textColor="#999999"
                android:textSize="13sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
