<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/background_soft">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Product Image" />

            <!-- Discount Badge - Elegant -->
            <TextView
                android:id="@+id/discountBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="12dp"
                android:background="@drawable/badge_background"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:paddingBottom="6dp"
                android:text="-33%"
                android:textColor="@color/text_on_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Label Badge Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_maroon"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="Hàng Mới"
                    android:textColor="@color/text_on_dark"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/voucherBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@color/accent_gold"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="Voucher 15K"
                    android:textColor="@color/text_primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Favorite Icon - Refined -->
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top"
                android:layout_margin="12dp"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:src="@drawable/baseline_favorite_border_24"
                android:tint="@color/text_primary"
                android:contentDescription="Add to favorites" />
        </FrameLayout>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Áo Khoác Bomber Nam ICONDENIM Freshman..."
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp" />

            <!-- Price Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Current Price -->
                <TextView
                    android:id="@+id/currentPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="649,000₫"
                    android:textColor="@color/price_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Add to Cart Icon - Elegant -->
                <ImageView
                    android:id="@+id/addToCartIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:tint="@color/primary_maroon"
                    android:contentDescription="Add to cart"
                    android:backgroundTint="@color/accent_rose_light" />
            </LinearLayout>

            <!-- Original Price -->
            <TextView
                android:id="@+id/originalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="900,000₫"
                android:textColor="@color/text_hint"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>