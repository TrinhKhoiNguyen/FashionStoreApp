<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryDark">@color/primary_black</item>
        <item name="colorAccent">@color/accent_yellow</item>
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_black</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_black</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>